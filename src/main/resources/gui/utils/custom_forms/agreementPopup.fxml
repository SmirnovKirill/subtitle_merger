<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.CheckBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="kirill.subtitlemerger.gui.util.custom_forms.AgreementPopupController"
      spacing="10" prefWidth="600"
>
    <padding>
        <Insets top="10" left="10" right="10" bottom="10"/>
    </padding>
    <HBox spacing="20" alignment="CENTER_LEFT">
        <HBox alignment="CENTER">
            <Label>
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24">
                        <Image url="/gui/icons/popup_agreement.png"/>
                    </ImageView>
                </graphic>
            </Label>
        </HBox>
        <VBox spacing="10">
            <Label fx:id="textLabel" wrapText="true"/>
            <HBox fx:id="applyToAllPane" spacing="5">
                <CheckBox fx:id="applyToAllCheckBox"/>
                <Label fx:id="applyToAllLabel"/>
            </HBox>
        </VBox>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="yesButton" minWidth="80"/>
        <Button fx:id="noButton" minWidth="80"/>
        <Region minWidth="20" maxWidth="20"/>
    </HBox>
</VBox>