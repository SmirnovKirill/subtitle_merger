<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Region?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="kirill.subtitlemerger.gui.util.custom_forms.ErrorPopupController"
      spacing="20" prefWidth="450"
>
    <padding>
        <Insets top="10" left="10" right="10" bottom="10"/>
    </padding>
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label>
            <graphic>
                <ImageView fitHeight="16" fitWidth="16">
                    <Image url="/gui/icons/popup_error.png"/>
                </ImageView>
            </graphic>
        </Label>
        <Label fx:id="textLabel" wrapText="true"/>
    </HBox>
    <HBox alignment="CENTER">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="okButton" minWidth="80" text="Ok"/>
        <Region minWidth="20" maxWidth="20"/>
    </HBox>
</VBox>