<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import kirill.subtitlesmerger.gui.tabs.videos.regular_content.table_with_files.TableWithFiles?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:id="pane"
      fx:controller="kirill.subtitlesmerger.gui.tabs.videos.regular_content.RegularContentController"
      stylesheets="/gui/tabs/videos/regular_content/regularContent.css"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <StackPane>
        <VBox fx:id="choicePane" spacing="10">
            <Label alignment="CENTER" maxWidth="Infinity" styleClass="choose-title">Please choose</Label>
            <HBox>
                <BorderPane HBox.hgrow="ALWAYS" styleClass="files-pane">
                    <center>
                        <HBox alignment="CENTER" spacing="10">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            <Label>One or more videos</Label>
                            <Button onAction="#videosButtonClicked" text="choose videos"/>
                        </HBox>
                    </center>
                </BorderPane>
                <BorderPane HBox.hgrow="ALWAYS" styleClass="directory-pane">
                    <center>
                        <HBox alignment="CENTER" spacing="10">
                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>
                            <Label>All videos from the directory</Label>
                            <Button onAction="#directoryButtonClicked" text="choose directory"/>
                        </HBox>
                    </center>
                </BorderPane>
            </HBox>
        </VBox>
        <VBox fx:id="resultPane" spacing="30" VBox.vgrow="ALWAYS" visible="false">
            <StackPane>
                <VBox fx:id="choseVideosPane" visible="false">
                    <Hyperlink text="back to selection"/>
                </VBox>
                <VBox fx:id="choseDirectoryPane" spacing="5" visible="false">
                    <Hyperlink text="back to selection"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="chosenDirectoryField" editable="false" HBox.hgrow="ALWAYS"/>
                        <Button>
                            <graphic>
                                <ImageView fitHeight="16" fitWidth="16">
                                    <Image url="/gui/icons/refresh.png"/>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>
                </VBox>
            </StackPane>

            <VBox spacing="15" VBox.vgrow="ALWAYS">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <CheckBox text="hide unavailable"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Get all sizes">
                        <graphic>
                            <ImageView fitHeight="16" fitWidth="16">
                                <Image url="/gui/icons/get.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button text="Process">
                        <graphic>
                            <ImageView fitHeight="16" fitWidth="16">
                                <Image url="/gui/icons/process.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
                <TableWithFiles fx:id="tableWithFiles" VBox.vgrow="ALWAYS">
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    <columns>
                        <TableColumn sortable="false" reorderable="false" minWidth="100">
                            <text>file</text>
                        </TableColumn>
                        <TableColumn sortable="false" reorderable="false" minWidth="100">
                            <text>upper subtitles</text>
                        </TableColumn>
                        <TableColumn sortable="false" reorderable="false" minWidth="100">
                            <text>lower subtitles</text>
                        </TableColumn>
                        <TableColumn sortable="false" reorderable="false" styleClass="last-column-header" minWidth="100">
                            <text>action</text>
                        </TableColumn>
                    </columns>
                </TableWithFiles>
            </VBox>
        </VBox>
    </StackPane>
</VBox>
