<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import kirill.subtitlemerger.gui.tabs.videos.regular_content.table_with_files.TableWithFiles?>
<?import kirill.subtitlemerger.gui.core.custom_controls.MultiColorResultLabels?>
<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:id="pane"
           fx:controller="kirill.subtitlemerger.gui.tabs.videos.regular_content.RegularContentController"
           stylesheets="/gui/tabs/videos/regular_content/regularContent.css"
>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox fx:id="choicePane" spacing="10">
        <Label alignment="CENTER" maxWidth="Infinity" styleClass="choose-title">Please choose</Label>
        <HBox>
            <BorderPane HBox.hgrow="ALWAYS" styleClass="files-pane">
                <center>
                    <HBox alignment="CENTER" spacing="10">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <Label>One or more videos</Label>
                        <Button onAction="#separateFilesButtonClicked" text="choose videos"/>
                    </HBox>
                </center>
            </BorderPane>
            <BorderPane HBox.hgrow="ALWAYS" styleClass="directory-pane">
                <center>
                    <HBox alignment="CENTER" spacing="10">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <Label>All videos from the directory</Label>
                        <Button onAction="#directoryButtonClicked" text="choose directory"/>
                    </HBox>
                </center>
            </BorderPane>
        </HBox>
    </VBox>
    <VBox fx:id="resultPane" visible="false">
        <VBox spacing="5">
            <Hyperlink onAction="#backToSelectionClicked" text="back to selection" styleClass="back-link"/>
            <HBox fx:id="chosenDirectoryPane" spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="chosenDirectoryField" editable="false" HBox.hgrow="ALWAYS"/>
                <Button onAction="#refreshButtonClicked">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16">
                            <Image url="/gui/icons/refresh.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
        <MultiColorResultLabels fx:id="generalResult" minHeight="40" maxHeight="40" alignment="CENTER"/>
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <HBox spacing="20"><Label fx:id="selectedForMergeLabel"/></HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <CheckBox fx:id="hideUnavailableCheckbox" onAction="#hideUnavailableClicked" text="hide unavailable"/>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- To be able to use tooltip when button is disabled. -->
                <HBox fx:id="autoSelectButtonWrapper" alignment="CENTER">
                    <Button fx:id="autoSelectButton" onAction="#autoSelectButtonClicked"  text="Auto-select subtitles">
                        <graphic>
                            <ImageView fitHeight="16" fitWidth="16">
                                <Image url="/gui/icons/computer.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
                <HBox fx:id="getAllSizesButtonWrapper" alignment="CENTER">
                    <Button fx:id="getAllSizesButton" onAction="#getAllSizesButtonClicked"
                            text="Get all subtitle sizes">
                        <graphic>
                            <ImageView fitHeight="16" fitWidth="16">
                                <Image url="/gui/icons/get.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
                <HBox fx:id="goButtonWrapper" alignment="CENTER">
                    <Button fx:id="goButton" onAction="#goButtonClicked" text="Go!">
                        <graphic>
                            <ImageView fitHeight="16" fitWidth="16">
                                <Image url="/gui/icons/go.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </HBox>
            <TableWithFiles fx:id="tableWithFiles" VBox.vgrow="ALWAYS">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <columns>
                    <TableColumn sortable="false" reorderable="false" minWidth="26" maxWidth="26" resizable="false">
                    </TableColumn>
                    <TableColumn sortable="false" reorderable="false" minWidth="200">
                        <text>file</text>
                    </TableColumn>
                    <TableColumn sortable="false" reorderable="false" minWidth="425">
                        <text>subtitles</text>
                    </TableColumn>
                </columns>
            </TableWithFiles>
            <HBox fx:id="addRemoveFilesPane" alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="removeSelectedButton" onAction="#removeButtonClicked" text="Remove selected"/>
                <Button onAction="#addButtonClicked" text="Add files"/>
            </HBox>
        </VBox>
    </VBox>
    <VBox fx:id="progressPane" spacing="10" alignment="CENTER" visible="false">
        <ProgressIndicator fx:id="progressIndicator"/>
        <Label fx:id="progressLabel"/>
        <HBox fx:id="cancelTaskPane" alignment="CENTER">
            <Label text="Please be patient, this may take a while depending on the size. If you want to cancel the task click "/>
            <Hyperlink text="here" onAction="#cancelTaskClicked">
                <padding>
                    <Insets/>
                </padding>
            </Hyperlink>
            <Label text="."/>
        </HBox>
    </VBox>
</StackPane>
