<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import kirill.subtitlesmerger.gui.GuiConstants?>
<?import kirill.subtitlesmerger.gui.tabs.merge_single_files.MergeSingleFilesTabController?>
<Tab xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
     fx:controller="kirill.subtitlesmerger.gui.tabs.merge_single_files.MergeSingleFilesTabController"
     text="Merge subtitle files">
    <GridPane hgap="30" vgap="40">
        <gridLinesVisible><GuiConstants fx:constant="DEBUG"/></gridLinesVisible>

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <columnConstraints>
            <ColumnConstraints minWidth="400"/>
            <ColumnConstraints minWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Please choose the file with the upper subtitles"
               GridPane.halignment="LEFT" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Button fx:id="upperSubtitlesChooseButton" onAction="#upperSubtitlesButtonClicked"
                text="Choose file"
                GridPane.halignment="RIGHT" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label fx:id="upperSubtitlesPathLabel"
               GridPane.halignment="LEFT" GridPane.rowIndex="0" GridPane.columnIndex="2">
            <MergeSingleFilesTabController fx:constant="FILE_NOT_CHOSEN_PATH"/>
        </Label>

        <Label text="Please choose the file with the lower subtitles"
               GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Button fx:id="lowerSubtitlesChooseButton" onAction="#lowerSubtitlesButtonClicked"
                text="Choose file"
                GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label fx:id="lowerSubtitlesPathLabel"
               GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.columnIndex="2">
            <MergeSingleFilesTabController fx:constant="FILE_NOT_CHOSEN_PATH"/>
        </Label>

        <Label text="Please choose where to save the result"
               GridPane.halignment="LEFT" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Button fx:id="mergedSubtitlesChooseButton" onAction="#mergedSubtitlesButtonClicked"
                text="Choose file"
                GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label fx:id="mergedSubtitlesPathLabel"
               GridPane.halignment="LEFT" GridPane.rowIndex="2" GridPane.columnIndex="2">
            <MergeSingleFilesTabController fx:constant="FILE_NOT_CHOSEN_PATH"/>
        </Label>

        <Button fx:id="mergeButton" onAction="#mergeButtonClicked"
                text="Merge subtitles" disable="true"
                GridPane.rowIndex="3" GridPane.columnSpan="3"/>

        <Label fx:id="resultLabel" GridPane.rowIndex="4" GridPane.columnSpan="3"/>
    </GridPane>
</Tab>